{
    "name":        "dlents/saber",
    "type":        "library",
    "keywords":    [
        "php",
        "swoole",
        "http",
        "client",
        "psr7",
        "coroutine",
        "axios",
        "ajax",
        "requests",
        "curl"
    ],
    "description": "Swoole coroutine HTTP client",
    "license":     "Apache-2.0",
    "authors":     [
        {
            "name":  "twosee",
            "email": "twose@qq.com"
        },
        {
            "name":  "David Lents",
            "email": "david@lents.net"
        }
    ],
    "support":     {
        "issues": "https://github.com/dlents/saber/issues"
    },
    "require":     {
        "php":        ">=7.0",
        "swlib/http": "dev-master",
        "swlib/util": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit":           "~7",
        "roave/security-advisories": "dev-master",
        "swoole/ide-helper":         "@dev"
    },
    "autoload":    {
        "classmap": [
            "src/Saber.php",
            "src/SaberGM.php"
        ],
        "psr-4":    {
            "Swlib\\Saber\\": "src"
        },
        "files":    [
            "src/include/functions.php"
        ]
    },
    "config":      {
        "optimize-autoloader": true,
        "sort-packages":       true
    },
    "scripts":     {
        "test":         "php ./tests/phpunit -c ./tests/phpunit.xml",
        "install-test": "php --ri swoole && composer install && composer test"
    }
}
